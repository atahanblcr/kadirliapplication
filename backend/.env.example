# =============================================================================
# KadirliApp Backend - Environment Variables
# =============================================================================

# App
NODE_ENV=development
PORT=3000
API_PREFIX=v1

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=kadirliapp
DATABASE_USER=kadirliapp_user
DATABASE_PASSWORD=your_strong_password_here
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false
DATABASE_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_min_64_chars
JWT_EXPIRES_IN=30d
JWT_REFRESH_SECRET=your_very_long_and_secure_refresh_secret_here_min_64_chars
JWT_REFRESH_EXPIRES_IN=90d

# OTP
OTP_TTL_SECONDS=300
OTP_RATE_LIMIT_PER_HOUR=10
OTP_MAX_ATTEMPTS=3
OTP_BLOCK_DURATION_MINUTES=5
# DEV MODE: Set to 'true' to skip real SMS, use OTP code '123456'
OTP_DEV_MODE=true

# SMS Provider (Netgsm, ileti365, etc.)
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_SENDER=KADIRLI

# File Storage (CloudFlare R2)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=kadirliapp
R2_PUBLIC_URL=https://pub-xxx.r2.dev

# CDN (BunnyCDN)
CDN_BASE_URL=https://cdn.kadirliapp.com

# Firebase (FCM Push Notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGINS=http://localhost:3001,http://localhost:3002
