# =============================================================================
# KadirliApp Backend - E2E Test Environment Variables
# =============================================================================
# Test environment overrides for isolated testing with test database

# App
NODE_ENV=development
PORT=3001
API_PREFIX=v1

# Database (PostgreSQL) - separate test database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=kadirliapp_test
DATABASE_USER=atahanblcr
DATABASE_PASSWORD=test-password
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=test-jwt-secret-that-is-at-least-32-characters-here-1234567890ab
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=test-jwt-refresh-secret-that-is-32-chars-1234567890abcdef
JWT_REFRESH_EXPIRES_IN=1d

# OTP
OTP_TTL_SECONDS=300
OTP_RATE_LIMIT_PER_HOUR=100
OTP_MAX_ATTEMPTS=99
OTP_BLOCK_DURATION_MINUTES=5
OTP_DEV_MODE=true

# SMS Provider (disabled in test, dev mode handles OTP)
SMS_API_KEY=test-key
SMS_API_SECRET=test-secret
SMS_SENDER=KADIRLI

# File Storage (disabled in test)
R2_ACCOUNT_ID=test-account
R2_ACCESS_KEY_ID=test-key
R2_SECRET_ACCESS_KEY=test-secret
R2_BUCKET_NAME=kadirliapp
R2_PUBLIC_URL=https://test.example.com

# CDN
CDN_BASE_URL=https://test.example.com

# Firebase (disabled in test)
FIREBASE_PROJECT_ID=test-project
FIREBASE_PRIVATE_KEY=test-key
FIREBASE_CLIENT_EMAIL=test@example.com

# Rate Limiting - disabled in test for predictability
THROTTLE_TTL=60
THROTTLE_LIMIT=9999

# CORS
CORS_ORIGINS=http://localhost:3001
